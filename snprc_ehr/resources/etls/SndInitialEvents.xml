<?xml version="1.0" encoding="UTF-8"?>
<etl xmlns="http://labkey.org/etl/xml" standalone="false">
    <name>_SND Initial Events</name>
    <description>Initial load of Events for SND module</description>
    <transforms>
        <transform id="step1" type="org.labkey.di.pipeline.TransformTask">
            <description>Copy to target</description>
            <source schemaName="snprcSrc" queryName="v_snd_events" />
            <destination schemaName="snd" queryName="Events" bulkLoad="true" batchSize="5000" targetOption="truncate">
                <columnTransforms>
                    <column source="createdBy" target="createdBy" transformClass="org.labkey.snprc_ehr.columnTransforms.UserTransform"/>
                    <column source="modifiedBy" target="modifiedBy" transformClass="org.labkey.snprc_ehr.columnTransforms.UserTransform"/>
                    <column source="ParticipantId" target="SubjectId"/>
                </columnTransforms>
            </destination>
        </transform>
    </transforms>
    <schedule>
        <poll interval="365d" />
    </schedule>
</etl>
