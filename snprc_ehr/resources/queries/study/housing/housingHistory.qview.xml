<customView xmlns="http://labkey.org/data/xml/queryCustomView">
    <columns>
        <column name="Id"/>
        <column name="date"/>
        <column name="enddate"/>
        <column name="room"/>
        <column name="cage"/>
        <column name="duration">
            <properties>
                <property name="columnTitle" value="Days In This Cage"/>
            </properties>
        </column>
    </columns>
    <sorts>
        <sort column="Id" />
        <sort column="date" descending="true"  />
        <sort column="duration" descending="true" />
    </sorts>
</customView>